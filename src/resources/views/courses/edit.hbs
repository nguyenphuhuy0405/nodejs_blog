<div class="mt-4">
    <h3>Sửa khoá học</h3>
    <form method="POST" action="/courses/{{courses._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên khoá học</label>
            <input type="text" class="form-control" id="name" name="name" value="{{courses.name}}">
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <textarea class="form-control" id="description" name="description">{{courses.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="videoId">VideoID</label>
            <input type="text" class="form-control" id="videoId" name="videoId" value="{{courses.videoId}}">
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
</div>